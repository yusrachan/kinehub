{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <header>
        <div class="logo-container">
            <img src="{{ asset('images/1.png') }}" alt="Logo KH" class="logo" href="{{ path('index') }}">
        </div>
    </header>
    <h1>Inscription de votre cabinet</h1>

        {{ form_start(form) }}
